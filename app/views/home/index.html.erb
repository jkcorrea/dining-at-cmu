<div id="timeline">
  <div id="time-labels">
    <p>now</p>
    <p>+1h</p>
    <p>+2h</p>
  </div>

  <div id="board">
    <div id="now" class="ruler"></div>
    <div class="ruler"></div>
    <div class="ruler"></div>
  </div>

  <div id="eateries" class="bg-gray">
    <%= render partial: 'home/eateries' %>
  </div>
</div>


  <% @locations.each do |loc| %>
    <% loc.eateries.each do |eat| %>
        <div class="popup popup-<%= eat.name.parameterize %>">

            <a href="#" class="close-popup">Close <%= eat.name %></a>
            <h1><%= eat.name %></h1>
            <p><%= eat.summary %>.</p>
            <p>Location: <%= loc.name %></p>
            <%= image_tag "menus/#{eat.name.parameterize.underscore}" %>
            <%= image_tag "settings/#{eat.name.parameterize.underscore}" %>
        </div>
    <% end %>
  <% end %>